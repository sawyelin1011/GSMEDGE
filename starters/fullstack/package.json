{
  "name": "@edge/fullstack-starter",
  "version": "1.0.0",
  "private": true,
  "description": "Fullstack starter with Hono API + React SPA for edge deployment",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\" --names \"server,client\" --prefix-colors \"blue,green\"",
    "dev:client": "vite",
    "dev:server": "tsx watch src/adapters/node/index.ts",
    "build": "npm run build:client && npm run build:server",
    "build:client": "vite build",
    "build:server": "tsup src/server/index.ts --format esm",
    "preview": "vite preview",
    "lint": "echo 'Linting skipped - ESLint 9 config needed'",
    "type-check": "tsc --noEmit",
    "build:cloudflare": "npm run build && npm run build:server",
    "deploy:cloudflare": "npm run build:cloudflare && wrangler deploy",
    "preview:cloudflare": "wrangler dev",
    "build:vercel": "npm run build && npm run build:server",
    "deploy:vercel": "vercel deploy --prod",
    "build:deno": "npm run build && npm run build:server",
    "deploy:deno": "deployctl deploy --project=your-project src/adapters/deno/mod.ts",
    "build:node": "npm run build && npm run build:server",
    "start:node": "node dist/index.js",
    "check": "npm run type-check && npm run lint"
  },
  "dependencies": {
    "@edge/core": "*",
    "@edge/adapters": "*",
    "hono": "^4.7.11",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^7.1.1",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20250110.0",
    "@hono/node-server": "^1.13.7",
    "@types/node": "^22.10.5",
    "@types/react": "^18.3.18",
    "@types/react-dom": "^18.3.5",
    "@typescript-eslint/eslint-plugin": "^8.20.0",
    "@typescript-eslint/parser": "^8.20.0",
    "@vitejs/plugin-react": "^4.3.4",
    "autoprefixer": "^10.4.20",
    "concurrently": "^9.1.2",
    "eslint": "^9.18.0",
    "eslint-plugin-react-hooks": "^5.1.0",
    "eslint-plugin-react-refresh": "^0.4.16",
    "postcss": "^8.4.49",
    "tailwindcss": "^3.4.17",
    "tsup": "^8.3.5",
    "tsx": "^4.19.2",
    "typescript": "^5.7.3",
    "vercel": "^39.2.7",
    "vite": "^6.0.7",
    "wrangler": "^3.101.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
