# Public environment variables (exposed to browser)
# ============================================
# YLSTACK Next.js Starter - Environment Configuration
# ============================================

# --------------------------------------------
# Public Environment Variables (Client-side)
# --------------------------------------------
NEXT_PUBLIC_API_URL=http://localhost:3000
NEXT_PUBLIC_SITE_URL=http://localhost:3000

# --------------------------------------------
# Private Environment Variables (Server-only)
# --------------------------------------------
API_SECRET=your-secret-key

# --------------------------------------------
# Database Configuration
# --------------------------------------------
# SQLite (Local Development)
DATABASE_TYPE=sqlite
DATABASE_URL=./local.db

# Turso (Edge Compatible - Production)
# DATABASE_TYPE=turso
# DATABASE_URL=libsql://your-database.turso.io
# TURSO_AUTH_TOKEN=your-turso-auth-token

# Cloudflare D1 (Edge Compatible - Production)
# DATABASE_TYPE=d1
# D1_DATABASE_ID=your-d1-database-id

# PostgreSQL via Neon (Edge Compatible - Production)
# DATABASE_TYPE=postgres
# DATABASE_URL=postgres://user:password@host:5432/database

# --------------------------------------------
# Cloudflare Configuration (for wrangler.jsonc)
# --------------------------------------------
CLOUDFLARE_ACCOUNT_ID=your-account-id
CLOUDFLARE_KV_NAMESPACE_ID=your-kv-namespace-id
CLOUDFLARE_R2_BUCKET_NAME=next-cache-bucket
CLOUDFLARE_D1_DATABASE_ID=your-d1-database-id
